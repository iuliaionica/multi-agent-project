# Vault AWS MCP Server Configuration

# Vault Configuration
VAULT_AWS_MCP_VAULT_ADDR=http://127.0.0.1:8200
VAULT_AWS_MCP_VAULT_TOKEN=hvs.your-vault-token-here
# VAULT_AWS_MCP_VAULT_NAMESPACE=admin  # For Vault Enterprise

# Vault AWS Secrets Engine
VAULT_AWS_MCP_VAULT_AWS_MOUNT_PATH=aws
VAULT_AWS_MCP_VAULT_AWS_ROLE=mcp-agent-role

# AWS Configuration
VAULT_AWS_MCP_AWS_REGION=eu-north-1
VAULT_AWS_MCP_AWS_FALLBACK_ENABLED=false

# Lease Management
VAULT_AWS_MCP_LEASE_TTL=1h
VAULT_AWS_MCP_LEASE_AUTO_RENEW=true
VAULT_AWS_MCP_LEASE_RENEW_THRESHOLD_SECONDS=300

# Logging
VAULT_AWS_MCP_LOG_LEVEL=INFO
